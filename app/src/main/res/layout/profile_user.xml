<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fotoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nombreProfileView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fotoUsuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Nombre Contacto"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/direccionProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreProfileView"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Dirección"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/direccionProfileView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/direccionProfile"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="aqui la dirección"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/telefonoProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/direccionProfileView"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Teléfono"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/telefonoProfileView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefonoProfile"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="aqui el telefono"
        android:textSize="18sp"/>

</RelativeLayout>